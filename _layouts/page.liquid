---
layout: default
---
<div class="post">
  <header class="post-header">
    <span style="text-align:center"><h1 class="post-title">{{ page.title }}</h1></span>
    <span style="text-align:center"><p class="post-description">{{ page.description }}</p></span>
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}

  <!-- Return to Top -->
  <hr>
  <a href="#" style="margin:auto; text-align:center; display:block" class="button large hpbottom">Return to Top</a>
  <br>
  <!-- Social -->
  {% if page.social %}
    <div class="social">
      <div class="contact-icons">
        {% include social.liquid %}
      </div>
      <div class="contact-note">
        {{ site.contact_note }}
      </div>
    </div>
  {% endif %}
</div>
